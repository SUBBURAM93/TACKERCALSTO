<Window x:Class="Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calsto Inventory PU4"
        Height="1000" Width="1350"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Gradient for the header -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Gray" Offset="0"/>
            <GradientStop Color="LightGray" Offset="1"/>
        </LinearGradientBrush>
        <!-- Modern shadow effect -->
        <DropShadowEffect x:Key="ModernShadow" BlurRadius="10" ShadowDepth="0" Color="#33000000"/>
        <!-- Modern pill icon button style -->
        <Style x:Key="ModernIconButton" TargetType="Button">
            <Setter Property="Background" Value="#4CFFFFFF"/>
            <Setter Property="Foreground" Value="#05485E"/>
            <Setter Property="BorderBrush" Value="#20FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="21"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#88E1F3F9"/>
                    <Setter Property="BorderBrush" Value="#FF0088AA"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0088AA"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Modern header -->
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- MODERN HEADER (no Spacing, only one Effect per element, using Margin for spacing) -->
        <!-- Outer Border for shadow -->
        <Border Grid.Row="0"
                Background="Transparent"
                CornerRadius="0,0,28,28"
                Effect="{StaticResource ModernShadow}">
            <!-- Inner Border for gradient and blur -->
            <Border Background="{StaticResource HeaderGradient}" CornerRadius="0,0,28,28">
                <!--<Border.Effect>
                    <BlurEffect Radius="0"/>
                </Border.Effect>-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="22,0,0,0">
                        <Image Source="/Resources/Picture1.png"
                               Width="110" Height="36" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- Center: App Title -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="PRODUCTION TRACKER (PU4)"
                                   FontFamily="Calibri"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Foreground="White"
                                   Margin="15,0,0,2"
                                   VerticalAlignment="Center"
                                   Effect="{StaticResource ModernShadow}"/>
                    </StackPanel>

                    <!-- Right: Nav Buttons, User, Company Logo -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,24,0">
                        <Button Style="{StaticResource ModernIconButton}" ToolTip="Forecasting" Margin="0,0,7,0" Height="30" Width="30">
                            <TextBlock Text="🔮"/>
                        </Button>
                        <Button Style="{StaticResource ModernIconButton}" ToolTip="User Management" Margin="0,0,7,0" Height="30" Width="30">
                            <TextBlock Text="👤"/>
                        </Button>
                        <Button Style="{StaticResource ModernIconButton}" ToolTip="Download" Margin="0,0,7,0" Height="30" Width="30">
                            <TextBlock Text="📥"/>
                        </Button>
                        <Button Style="{StaticResource ModernIconButton}" ToolTip="Refresh" Margin="0,0,12,0" Height="30" Width="30">
                            <TextBlock Text="🔄"/>
                        </Button>
                        <!-- Circular Profile Avatar -->
                        <Ellipse Width="38" Height="38" Margin="0,0,8,0" Stroke="#E0F7FA" StrokeThickness="1.1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/profile.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <!-- Username -->
                        <TextBlock Text="Vinith" FontSize="15" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <!-- Company Logo -->
                        <Image Width="100" Height="28" Stretch="Uniform" VerticalAlignment="Center" Source="/Resources/CA_Storage_Logo-removebg-preview.png" Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <ContentControl x:Name="MainContentArea" Grid.Row="1" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="5,5,5,5"  Background="White"
                    CornerRadius="16"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    SnapsToDevicePixels="True"
                    Effect="{StaticResource ModernShadow}">
                <TabControl Background="Transparent"
                            BorderThickness="0"
                            Padding="6" Margin="0,0,-5,0"
                            FontFamily="Segoe UI" FontSize="15">
                 <TabItem Margin="10,-2,-12,0" FontSize="12" FontWeight="Bold">
    <TabItem.Header>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="📊" Margin="0,0,5,0"/>
                                <TextBlock Text="DASHBOARD" FontSize="10"/>
                            </StackPanel>
    </TabItem.Header>
    <Frame Source="Pages/Dashboard.xaml" NavigationUIVisibility="Hidden"/>
</TabItem>

<TabItem Margin="10,-2,-12,0" FontSize="10" FontWeight="Bold">
    <TabItem.Header>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="📅" Margin="0,0,5,0"/>
            <TextBlock Text="PLANNING"/>
        </StackPanel>
    </TabItem.Header>
    <Frame Source="Pages/Planning.xaml" NavigationUIVisibility="Hidden"/>
</TabItem>

