</TabItem>

<TabItem Margin="10,-2,-12,0" FontSize="11" FontWeight="Bold">
    <TabItem.Header>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="🚚" Margin="0,0,5,0"/>
            <TextBlock Text="DISPATCH"/>
        </StackPanel>
    </TabItem.Header>
    <Grid Background="White"/>
</TabItem>

                </TabControl>
                
            </Border>
        </Grid>
    </Grid>
</Window>