<Window x:Class="Login"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Calsto Inventory"
        Width="589" Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="15" BorderBrush="Green" BorderThickness="2" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="129*" />
                <ColumnDefinition Width="139*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="Beige" CornerRadius="12,0,0,12" Margin="3"/>

            <StackPanel Grid.Column="1" Margin="10,10,10,12">
                <TextBlock Text="LOGIN HERE"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30" />

                <!-- Username -->
                <TextBlock Text="Username" FontSize="14" Foreground="#333333" Margin="0,0,0,3"/>
                <Border BorderBrush="Green" BorderThickness="1" CornerRadius="4" Height="30" Margin="0,0,0,15">
                    <TextBox x:Name="txtUsername"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8,0,0,0"
                             FontSize="14"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="14" Foreground="#333333" Margin="0,0,0,3"/>
                <Border BorderBrush="Green" BorderThickness="1" CornerRadius="4" Height="30" Margin="0,0,0,4">
                    <Grid>
                        <PasswordBox x:Name="txtPassword"
                                     Padding="8,0,0,0"
                                     FontSize="14"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Visibility="Visible"
                                     PasswordChanged="txtPassword_PasswordChanged"/>
                        <TextBox x:Name="txtPasswordVisible"
                                 Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8,0,0,0"
                                 FontSize="14"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Visibility="Collapsed"
                                 TextChanged="txtPasswordVisible_TextChanged"/>
                    </Grid>
                </Border>

                <CheckBox x:Name="chkShowPassword"
                          Content="Show Password"
                          FontSize="11"
                          Margin="2,0,0,10"
                          Foreground="#666"
                          Checked="chkShowPassword_Checked"
                          Unchecked="chkShowPassword_Unchecked"/>
                <TextBlock x:Name="lblCapsLock"
           Text="Caps Lock is ON"
           Foreground="OrangeRed"
           FontSize="11"
           Visibility="Collapsed"
           Margin="2,0,0,10"/>


                <!-- Error + Forgot -->
                <Grid Margin="0,8,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="lblError"
                               Text="{Binding ErrorMessage}"
                               Visibility="{Binding IsErrorVisible}"
                               Grid.Column="0"
                               Foreground="Red"
                               FontSize="11"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="txtForgotPassword"
           Text="Forgot password?"
           Grid.Column="1"
           Foreground="Green"
           FontSize="11"
           Cursor="Hand"
           TextDecorations="Underline"
           HorizontalAlignment="Right"
           MouseLeftButtonUp="txtForgotPassword_MouseLeftButtonUp"/>

                </Grid>

                <!-- Login Button -->
                <Border Background="Beige" 
                        BorderBrush="Green"
                        BorderThickness="1"
                        CornerRadius="4"
                        Height="40"
                        Width="120"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                    <Button x:Name="btnLogin"
                            Content="Login"
                            Command="{Binding LoginCommand}"
                            Background="Transparent"
                            Foreground="#333333"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="SemiBold"/>
                </Border>

                <!-- Version Label -->
                <TextBlock x:Name="lblUpdateNote"
                           FontSize="11"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0,0,0,8"/>

                <TextBlock Text="For Assistance, please contact Admin"
                           FontSize="11"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Grid HorizontalAlignment="Right" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CALSTO :" Grid.Column="0" FontSize="10" Foreground="#999999" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                    <TextBlock x:Name="lblversion" Text="I25.7.0" Grid.Column="1" FontSize="10" Foreground="#999999"/>
                </Grid>
                <!-- 🟢🔴 DB Connection Light -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                    <Ellipse x:Name="dbStatusIndicator" Width="10" Height="10" Fill="Gray" Stroke="Black" StrokeThickness="0.5" Margin="0,0,5,0"/>
                    <TextBlock x:Name="dbStatusText" Text="Checking..." FontSize="10" Foreground="#999999" VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>