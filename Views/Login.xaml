<Window x:Class="Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="av"
        Title="Login"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="568" Height="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    

    <!-- Resources -->
    <Window.Resources>
        <!-- Gradient brush -->
        <LinearGradientBrush x:Key="loginGradient" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FF232D37" Offset="0"/>
            <GradientStop Color="#FF408399" Offset="1"/>
        </LinearGradientBrush>

        <!-- Rounded Login Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#1C809C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#156B82"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#104E5F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="22" Margin="2" Background="{StaticResource loginGradient}">
            <Grid>
                <!-- Left Gradient Panel -->
                <Border CornerRadius="20"
                        Width="337" Height="396"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderBrush="#3C4247"
                        BorderThickness="1.2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF232D37" Offset="0"/>
                            <GradientStop Color="#FF408399" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#28000000"/>
                    </Border.Effect>
                </Border>

                <!-- Right Login Card -->
                <Border CornerRadius="24"
                        Background="White"
                        Width="288" Height="396"
                        Padding="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="276,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#2A000000"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header & Fields -->
                            <RowDefinition Height="Auto"/>
                            <!-- Error & Forgot Password -->
                            <RowDefinition Height="Auto"/>
                            <!-- Login Button -->
                            <RowDefinition Height="Auto"/>
                            <!-- Update Label -->
                            <RowDefinition Height="Auto"/>
                            <!-- Version Info -->
                            <RowDefinition Height="Auto"/>
                            <!-- DB Status -->
                        </Grid.RowDefinitions>

                        <!-- Header + Username + Password -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="Welcome Back!"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#232D37"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Login to continue"
                                       FontSize="14"
                                       Foreground="#6F7B8A"
                                       Margin="0,0,0,16"/>

                            <!-- Username -->
                            <TextBlock Text="Username"
                                       Foreground="#8A8A8A"
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <Border Background="#F5F7FA"
                                    Height="30"
                                    CornerRadius="8"
                                    Margin="0,0,0,8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#20000000"/>
                                </Border.Effect>
                                <DockPanel>
                                    <TextBlock Text="👤"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                    <TextBox x:Name="txtUsername"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             FontSize="12"
                                             Foreground="#232D37"
                                             Padding="4,0"
                                             VerticalAlignment="Center"/>
                                </DockPanel>
                            </Border>

                            <!-- Username Validation -->
                            <TextBlock x:Name="lblUsernameValidation"
                                       Text="Please enter username"
                                       Foreground="#E74C3C"
                                       FontSize="10"
                                       Visibility="Collapsed"
                                       Margin="0,0,0,8"/>

                            <!-- Password -->
                            <TextBlock Text="Password"
                                       Foreground="#8A8A8A"
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <Border Background="#F5F7FA"
                                    Height="30"
                                    CornerRadius="8"
                                    Margin="0,0,0,8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#20000000"/>
                                </Border.Effect>
                                <DockPanel>
                                    <TextBlock Text="🔒"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                    <PasswordBox x:Name="txtPassword"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="12"
                                                 Foreground="#232D37"
                                                 Width="166"
                                                 Padding="4,0"/>
                                    <Button x:Name="btnTogglePassword"
                                            Content="👁️"
                                            FontSize="12"
                                            Width="24"
                                            Height="24"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Show/Hide Password"
                                            Margin="4,0"
                                            VerticalAlignment="Center"/>
                                </DockPanel>
                            </Border>

                            <!-- Password Validation -->
                            <TextBlock x:Name="lblPasswordValidation"
                                       Text="Please enter password"
                                       Foreground="#E74C3C"
                                       FontSize="10"
                                       Visibility="Collapsed"
                                       Margin="0,0,0,8"/>

                            <!-- Caps Lock -->
                            <TextBlock x:Name="lblCapsLock"
                                       Text="Caps Lock is ON"
                                       Foreground="#E74C3C"
                                       FontSize="10"
                                       Visibility="Collapsed"
                                       Margin="0,0,0,8"/>
                        </StackPanel>

                        <!-- Error & Forgot Password -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="lblError"
                                           Text="Validation Error"
                                           Foreground="#E74C3C"
                                           FontSize="10"
                                           Visibility="Collapsed"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="lblErrorMsg"
                                           Text="Please enter both username and password"
                                           Foreground="#E74C3C"
                                           FontSize="10"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                            <TextBlock x:Name="txtForgotPassword"
                                       Text="Forgot password?"
                                       Foreground="#6F7B8A"
                                       FontSize="9"
                                       Cursor="Hand"
                                       TextDecorations="Underline"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,0,0"
                                       Grid.Column="1"
                                       MouseLeftButtonUp="txtForgotPassword_MouseLeftButtonUp"/>
                        </Grid>

                        <!-- Login Button -->
                        <Button Grid.Row="2"
                                Content="Log in"
                                Width="90"
                                Height="32"
                                HorizontalAlignment="Left"
                                Background="#1C809C"
                                Foreground="White"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="150,2,0,10"
                                BorderThickness="0"
                                Style="{StaticResource RoundedButtonStyle}"/>

                        <!-- Update Info -->
                        <TextBlock x:Name="lblUpdate"
                                   Grid.Row="3"
                                   Text="New Update Available"
                                   FontSize="11"
                                   Foreground="#009688"
                                   Margin="0,0,0,8"
                                   HorizontalAlignment="Left"/>

                        <!-- Version Info -->
                        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="CALSTO : D25.7.1"
                                       FontSize="10"
                                       Foreground="#8A8A8A"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="For any assistance contact admin"
                                       FontSize="10"
                                       Foreground="#8A8A8A"/>
                        </StackPanel>

                        <!-- DB Connection Status -->
                        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Ellipse x:Name="dbStatusIndicator"
                                     Width="10"
                                     Height="10"
                                     Fill="Red"
                                     Margin="0,0,6,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock x:Name="dbStatusText"
                                       Text="Not Connected"
                                       FontSize="10"
                                       Foreground="#8A8A8A"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>