<Page x:Class="Planning"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:FilterDataGrid;assembly=FilterDataGrid"
      Title="Planning" Background="#FAFAFA" FontFamily="Segoe UI" FontSize="11">

    <Page.Resources>
        <!-- Header style -->
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DBE2E8"/>
        </Style>

        <!-- Row style without unconditional background -->
        <Style x:Key="RowStyle" TargetType="DataGridRow">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="Padding" Value="6,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cell text style with trimming -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="#444"/>
        </Style>

        <!-- Highlight blue for ProjectStatus Open -->
        <Style x:Key="ProjectStatusStyle" TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="OPEN">
                    <Setter Property="Foreground" Value="Green"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="HOLD">
                    <Setter Property="Foreground" Value="RED"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="CLOSED">
                    <Setter Property="Foreground" Value="PURPLE"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- Master Data Grid -->
        <control:FilterDataGrid 
            x:Name="MasterDG"
            ItemsSource="{Binding PlannigList}"
            AutoGenerateColumns="False"
            SelectedItem="{Binding SelectedWID, Mode=TwoWay}"
            ShowRowsCount="True"
            ShowStatusBar="True"
            FilterLanguage="English"
            RowHeight="22"
            FontSize="11"
            ColumnHeaderHeight="28"
            Margin="0"
            AlternationCount="2"
            RowBackground="White"
            AlternatingRowBackground="#F8F9FB"
            ColumnHeaderStyle="{StaticResource HeaderStyle}"
            RowStyle="{StaticResource RowStyle}"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            Grid.Column="0">
            <control:FilterDataGrid.Columns>
                <control:DataGridTextColumn Header="BOM No." Binding="{Binding PROJECTNO}" Width="110" IsColumnFiltered="True">
                    <control:DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </control:DataGridTextColumn.ElementStyle>
                </control:DataGridTextColumn>
                
                <control:DataGridTextColumn Header="Customer" Binding="{Binding Customer}" Width="250" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                
            </control:FilterDataGrid.Columns>
        </control:FilterDataGrid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="10" Background="#ddd" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- Details and StockIn Panel -->
        <Grid Grid.Column="2" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <!-- Details DataGrid -->
            <control:FilterDataGrid 
    x:Name="WIDBOMDG"
    ItemsSource="{Binding PlanningSideDgList}" 
    AutoGenerateColumns="False"    
    ShowRowsCount="True"
    ShowStatusBar="True"
    FilterLanguage="English"
    RowHeight="22"
    FontSize="11"
    ColumnHeaderHeight="28"
    AlternationCount="2"
    RowBackground="White"
    AlternatingRowBackground="#F8F9FB"
    ColumnHeaderStyle="{StaticResource HeaderStyle}"
    RowStyle="{StaticResource RowStyle}"
    CanUserResizeColumns="True"
    CanUserSortColumns="True"
    Margin="0,0,0,12">

                <control:FilterDataGrid.Columns>
                    <control:DataGridTextColumn Header="WID" Binding="{Binding WID}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="120" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Assigned" Binding="{Binding Assigned}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="BOM Qty" Binding="{Binding BOMQty}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Process" Binding="{Binding Process}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Colour" Binding="{Binding Colour}" Width="90" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Packing Balance" Binding="{Binding PackingBalance}" Width="90" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Dispatched Qty" Binding="{Binding DispatchQty}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Dispatch Date" Binding="{Binding DispatchDate, StringFormat=\{0:dd-MM-yyyy\}}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Dispatch Pending" Binding="{Binding DispatchPending}" Width="110" IsColumnFiltered="True" />

                    <!-- View Button Column -->
                    <control:DataGridTemplateColumn Header="View" Width="50">
                        <control:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View"
                            Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontSize" Value="11"/>
                                            <Setter Property="Padding" Value="4,2"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </control:DataGridTemplateColumn.CellTemplate>
                    </control:DataGridTemplateColumn>

                    <!-- Edit Button Column -->
                    <control:DataGridTemplateColumn Header="Edit" Width="50">
                        <control:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit"
                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#2196F3"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontSize" Value="11"/>
                                            <Setter Property="Padding" Value="4,2"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </control:DataGridTemplateColumn.CellTemplate>
                    </control:DataGridTemplateColumn>

                </control:FilterDataGrid.Columns>
            </control:FilterDataGrid>
            
            
            
            <control:FilterDataGrid 
x:Name="JobcardDG"
ItemsSource="{Binding PlanningSideDgList}" 
AutoGenerateColumns="False"    
ShowRowsCount="True"
ShowStatusBar="True"
FilterLanguage="English"
RowHeight="22"
FontSize="11"
ColumnHeaderHeight="28"
AlternationCount="2"
RowBackground="White"
AlternatingRowBackground="#F8F9FB"
ColumnHeaderStyle="{StaticResource HeaderStyle}"
RowStyle="{StaticResource RowStyle}"
CanUserResizeColumns="True"
CanUserSortColumns="True"
Margin="0,0,0,0"
                Grid.Row="1"
                Grid.Column="1">

                <control:FilterDataGrid.Columns>
                    <control:DataGridTextColumn Header="WID" Binding="{Binding WID}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    
                    <control:DataGridTextColumn Header="Assigned" Binding="{Binding Assigned}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="BOM Qty" Binding="{Binding BOMQty}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Process" Binding="{Binding Process}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                     <control:DataGridTextColumn Header="Dispatch Pending" Binding="{Binding DispatchPending}" Width="110" IsColumnFiltered="True" />

                    <!-- View Button Column -->
                    <control:DataGridTemplateColumn Header="View" Width="50">
                        <control:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View"
                        Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontSize" Value="11"/>
                                            <Setter Property="Padding" Value="4,2"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </control:DataGridTemplateColumn.CellTemplate>
                    </control:DataGridTemplateColumn>

                    <!-- Edit Button Column -->
                    <control:DataGridTemplateColumn Header="Edit" Width="50">
                        <control:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit"
                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#2196F3"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontSize" Value="11"/>
                                            <Setter Property="Padding" Value="4,2"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </control:DataGridTemplateColumn.CellTemplate>
                    </control:DataGridTemplateColumn>

                </control:FilterDataGrid.Columns>
            </control:FilterDataGrid>




            <!-- Stock IN Transaction Panel -->
            <Border Background="White" CornerRadius="6" Padding="16" BorderBrush="#D1D9E6" BorderThickness="1" Grid.Row="1" Margin="878,0,0,0">
                <StackPanel>
                    <TextBlock Text="Project Details" FontWeight="SemiBold" FontSize="13" Foreground="#222" Margin="0,0,0,12" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>



                        <TextBlock Text="PO Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,8"/>
                        <DatePicker Grid.Row="2" Grid.Column="1" Width="150" FontSize="12" Margin="0,0,0,8"/>

                        <TextBlock Text="PO Date:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,8"/>
                        <DatePicker Grid.Row="3" Grid.Column="1" Width="150" FontSize="12" Margin="0,0,0,8"/>

                        <Button Content="Apply" Grid.Row="4" Grid.Column="1" Width="80" Height="30" Margin="0,12,0,0" Background="#007AFF" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left" BorderThickness="0" Cursor="Hand"  />
                        <Button Content="Hold/Cancel" Grid.Row="4" Grid.Column="0" Width="80" Height="30" Margin="0,12,0,0" Background="red" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left" BorderThickness="0" Cursor="Hand" />

                    </Grid>


                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
