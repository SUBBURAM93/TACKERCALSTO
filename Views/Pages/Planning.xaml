<Page x:Class="Planning"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TACKERCALSTO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Planning">
    <Grid>
        <Border x:Name="Panel_Return" Grid.Row="2" Background="#E0F2FE" Margin="3" CornerRadius="4" BorderBrush="#64B5F6" BorderThickness="1">
            <StackPanel Margin="8">
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="🔁 Return Transaction" FontWeight="SemiBold" FontSize="12" Foreground="#333333" VerticalAlignment="Center"/>
                    <Button Content="Apply" HorizontalAlignment="Right" Width="50" Height="25" Background="#1976D2" Foreground="White"
FontWeight="Bold" Padding="3" BorderThickness="0"   FontSize="10"/>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Item name:" Grid.Row="0" Grid.Column="0" Margin="0,0,5,3" FontSize="11"/>
                    <TextBlock x:Name="LblReturnItemNameValue" Text="[Select Item]" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="11"/>

                    <TextBlock Text="Description:" Grid.Row="1" Grid.Column="0" Margin="0,0,5,3" FontSize="11"/>
                    <TextBlock x:Name="LblReturnDescriptionValue" Text="[Select Description]" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" FontWeight="SemiBold" FontSize="11" TextWrapping="Wrap" MaxHeight="35"/>

                    <TextBlock Text="Quantity:" Grid.Row="2" Grid.Column="0" Margin="0,0,5,3" FontSize="11"/>
                    <TextBox x:Name="TxtReturnQuantity" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" BorderBrush="#64B5F6" BorderThickness="1" Padding="3" Height="22" Background="White" FontSize="11"/>

                    <TextBlock Text="Reference No:" Grid.Row="3" Grid.Column="0" Margin="0,0,5,3" FontSize="11"/>
                    <TextBox x:Name="TxtReturnReferenceNo" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8" BorderBrush="#64B5F6" BorderThickness="1" Padding="3" Height="22" Background="White" FontSize="11"/>

                    <TextBlock Text="Remarks:" Grid.Row="4" Grid.Column="0" Margin="0,0,5,3" FontSize="11"/>
                    <TextBox x:Name="TxtReturnRemarks" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" BorderBrush="#64B5F6" BorderThickness="1" Padding="3" Height="22" Background="White" FontSize="11"/>

                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,3">
                        <TextBlock Text="Current Stock:" FontSize="11"/>
                        <TextBlock x:Name="LblReturnCurrentStockValue" Text="N/A" Margin="3,0,0,0" FontWeight="Bold" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Page>
